{
    "name": "4irik/url-shorter",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "require": {
        "slim/slim": "^4.9",
        "slim/psr7": "^1.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.4",
        "friendsofphp/php-cs-fixer": "^3.5"
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit tests",
        "type-check": "@php vendor/bin/phpstan analyse -c phpstan.neon",
        "style-fix": "@php vendor/bin/php-cs-fixer fix"
    }
}
